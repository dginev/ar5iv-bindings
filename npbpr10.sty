% The value of the counter secnumdepth gives the depth of the
% highest-level sectioning command that is to produce section numbers.

\setcounter{secnumdepth}{3}

\@secpenalty=0					 % originally -300

% definition of \@sect transplanted from latex.tex and
% adapted with respect to (1) spacing between section number and title
% and (2) paragraph behaviour of title
%
% \@fullstop = . (section, subsection, ...)
%            =   (appendix section, appendix subsection, ...)

\def\@fullstop{.}
\def\@sect#1#2#3#4#5#6[#7]#8{\ifnum #2>\c@secnumdepth
  \def\@svsec{}\else
  \refstepcounter{#1}
	\edef\@svsec{\csname the#1\endcsname\@fullstop \hskip 0.5em }\fi
  \@tempskipa #5\relax
  \ifdim \@tempskipa>\z@
    \begingroup #6\relax
      \@hangfrom{\hskip #3\relax\@svsec}{\interlinepenalty\@M
      \rightskip=0pc plus 9pc #8\par}%
    \endgroup
    \csname #1mark\endcsname{#7}\addcontentsline
    {toc}{#1}{\ifnum #2>\c@secnumdepth \else
               \protect\numberline{\csname the#1\endcsname}\fi
              #7}\else
    \def\@svsechd{#6\hskip #3\@svsec #8\csname #1mark\endcsname
                  {#7}\addcontentsline
                       {toc}{#1}{\ifnum #2>\c@secnumdepth \else
                         \protect\numberline{\csname the#1\endcsname}\fi
                   #7}}\fi
  \@xsect{#5}}

