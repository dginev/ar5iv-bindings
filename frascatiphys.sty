%				use pagestyle empty instead of plain.
% Sep-1-94      S. Bianco LNF   Make this style compatible with
%                               Frascati Physics Series format.
%
\def\maketitle{\par
 \begingroup
   \def\thefootnote{\fnsymbol{footnote}}
   \def\@makefnmark{\hbox   
       to 0pt{$^{\@thefnmark}$\hss}}   
   \if@twocolumn               
     \twocolumn[\@maketitle]   
     \else \newpage
     \global\@topnum\z@        % Prevents figures from going at top of page.
     \@maketitle \fi\thispagestyle{empty}\@thanks 
 \endgroup
 \setcounter{footnote}{0}
 \let\maketitle\relax
 \let\@maketitle\relax
 \gdef\@thanks{}\gdef\@author{}\gdef\@title{}\let\thanks\relax}

\def\@maketitle{\newpage
 \null
 \vbox to 8cm{			%space limit for title/author

 \vskip 1em                 % Vertical space above title.
 \begin{center}
  {\normalsize\bf \@title \par}     % Title set in \normalsize. 
  \vskip 0.5em                % Vertical space after title.
  {\normalsize\bf             % each author set in \normalsize,\bf in a
   \lineskip .5em             % tabular environment
   \begin{tabular}[t]{c}\@author 
   \end{tabular}\par}                   
  \vskip 1em              % Vertical space after author.
\end{center}
 \par
 \vskip 0.5em}                % Vertical space after title/author lines
 }			% end of vbox to 8cm

